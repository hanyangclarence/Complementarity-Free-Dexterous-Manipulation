<mujoco model="shadow_hand object manipulation scene">
  <include file="shadow_hand_right.xml"/>

  <statistic center="0 0 0" extent="0.3"/>

  <visual>
    <rgba haze="0.15 0.25 0.35 1"/>
    <quality shadowsize="8192"/>
    <global azimuth="130" elevation="-40" offwidth="1280" offheight="960"/>
  </visual>

  <asset>
    <!-- Object mesh -->
    <mesh name="obj_mesh" file="../assets/objects/102_obj.obj" scale="1 1 1"/>

    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0."/>
    <material name="obj_material" rgba="0.8 0.6 0.4 1" specular="0.5" shininess="0.3"/>
  </asset>

  <worldbody>
    <light directional="true" ambient="0.2 0.2 0.2" diffuse="0.8 0.8 0.8" castshadow="false" pos="0 1 4" dir="0 0 -1" name="light0"/>
    <camera name="demo-cam" pos="-0.003 -0.393 0.317" xyaxes="1.000 -0.000 0.000 0.000 0.462 0.887"/>

    <geom name="floor" pos="0 0 0" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- Object (manipulated item) - using mesh from Genesis trajectory -->
    <body name="obj" pos="0.0 0.0 0.05">
        <freejoint name="obj_freejoint"/>
        <geom name="obj" type="mesh" mesh="obj_mesh" mass="0.1" material="obj_material"
              quat="1 0 0 0" friction="0.5" rgba="0.8 0.6 0.4 0.99"/>
    </body>

    <!-- Target object visualization (transparent mesh) -->
    <body name="goal" pos="-0.1 -0.00 0.2">
        <geom name="goal_geom" type="mesh" mesh="obj_mesh" material="obj_material"
              conaffinity="0" contype="0" pos="0 0 0" rgba="1 0 1 0.3"/>
    </body>

    <!-- Target palm pose visualization -->
    <body name="target_palm" pos="0.0 0.0 0.0" quat="1 0 0 0">
        <!-- Semi-transparent box representing target palm -->
        <geom name="target_palm_box" type="box" size="0.03 0.015 0.045" pos="0 0 0.04"
              conaffinity="0" contype="0" rgba="0 1 0 0.2"/>
        <!-- Coordinate frame axes for target palm orientation -->
        <geom name="target_palm_x" type="cylinder" size="0.001" fromto="0 0 0 0.03 0 0"
              conaffinity="0" contype="0" rgba="1 0 0 0.5"/>
        <geom name="target_palm_y" type="cylinder" size="0.001" fromto="0 0 0 0 0.03 0"
              conaffinity="0" contype="0" rgba="0 1 0 0.5"/>
        <geom name="target_palm_z" type="cylinder" size="0.001" fromto="0 0 0 0 0 0.03"
              conaffinity="0" contype="0" rgba="0 0 1 0.5"/>
    </body>

    <!-- Target fingertip positions (5 spheres for Shadow hand) -->
    <body name="target_fftip" pos="0.0 0.0 0.1">
        <geom name="target_fftip_geom" type="sphere" size="0.008"
              conaffinity="0" contype="0" rgba="1 0.5 0 0.4"/>
    </body>
    <body name="target_mftip" pos="0.0 0.0 0.1">
        <geom name="target_mftip_geom" type="sphere" size="0.008"
              conaffinity="0" contype="0" rgba="1 0.5 0 0.4"/>
    </body>
    <body name="target_rftip" pos="0.0 0.0 0.1">
        <geom name="target_rftip_geom" type="sphere" size="0.008"
              conaffinity="0" contype="0" rgba="1 0.5 0 0.4"/>
    </body>
    <body name="target_lftip" pos="0.0 0.0 0.1">
        <geom name="target_lftip_geom" type="sphere" size="0.008"
              conaffinity="0" contype="0" rgba="1 0.5 0 0.4"/>
    </body>
    <body name="target_thtip" pos="0.0 0.0 0.1">
        <geom name="target_thtip_geom" type="sphere" size="0.008"
              conaffinity="0" contype="0" rgba="1 0.5 0 0.4"/>
    </body>
  </worldbody>
</mujoco>
